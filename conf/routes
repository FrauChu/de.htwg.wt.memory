# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()


GET		/login					controllers.Application.login()
POST	/login					controllers.Application.authenticate()
GET		/memory/:command		controllers.Application.memory(command: String)

GET		/signup					controllers.Application.signupForm()
POST	/signup					@controllers.Application.signup()
#GET		/command/:commandline	controllers.Application.commandline(commandline:String)
#POST	/json/:commandline		controllers.Application.jsonCommand(commandline:String)
#GET		/socket					controllers.Application.connectWebSocket()

GET		/openID/auth			controllers.Application.auth()
GET		/openID/verify			@controllers.Application.verify()

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file			controllers.Assets.at(path="/public", file)
